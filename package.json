{
  "name": "tinkoff-stocks-monitor",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:monitor": "lerna exec --scope @mishannn/tinkoff-stocks-monitor --no-prefix -- yarn build",
    "watch:monitor": "lerna exec --scope @mishannn/tinkoff-stocks-monitor --no-prefix -- yarn watch",
    "clean:monitor": "lerna exec --scope @mishannn/tinkoff-stocks-monitor --no-prefix -- yarn clean",
    "start:notifier": "lerna exec --scope @mishannn/tinkoff-stocks-notifier --no-prefix -- yarn start",
    "update:version": "lerna version --no-push"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@lerna/filter-options": "^3.20.0",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "eslint": "^6.8.0",
    "eslint-loader": "^4.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "lerna": "^3.20.2",
    "prettier": "^2.0.4",
    "ts-loader": "^6.2.2",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  }
}
